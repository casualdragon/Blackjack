<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackjack_bg"
    android:weightSum="2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tittle_textview"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textSize="60sp"
            android:fontFamily="serif" />

        <TextView
            android:text="Dealer"
            android:layout_width="match_parent"
            android:id="@+id/dealer_textview"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:fontFamily="serif" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/dealer_layout"
            android:layout_height="100dp">


            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back_black"
                android:id="@+id/dealer_imageview1"
                android:layout_width="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/dealer_imageview2"
                android:layout_marginEnd="25dp" />

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back_black"
                android:id="@+id/dealer_imageview2"
                android:layout_width="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back_black"
                android:id="@+id/dealer_imageview3"
                android:layout_width="100dp"
                android:layout_marginLeft="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/dealer_imageview2" />

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back_black"
                android:id="@+id/dealer_imageview4"
                android:layout_width="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/dealer_imageview3"
                android:layout_marginStart="25dp" />

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back_black"
                android:id="@+id/dealer_imageview5"
                android:layout_width="100dp"
                android:layout_marginStart="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/dealer_imageview4" />

            <TextView
                android:text="00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="gravity"
                android:textStyle="normal|bold"
                android:textColor="@android:color/white"
                android:textSize="45dp"
                android:id="@+id/dealer_total_textview"
                android:gravity="center_vertical|fill_horizontal"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/dealer_imageview5"
                android:fontFamily="serif" />

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back_black"
                android:id="@+id/dealer_imageview"
                android:layout_width="100dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/dealer_imageview2"
                android:layout_marginEnd="18dp" />


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom">

        <TextView
            android:text="Player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/player_textview"
            android:layout_marginTop="25dp"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"
            android:textStyle="normal|bold"
            android:fontFamily="serif" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/player_layout"
            android:layout_marginBottom="50dp"
            android:layout_height="100dp">


            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back_black"
                android:id="@+id/player_imageview1"
                android:layout_width="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/player_imageview2"
                android:layout_marginEnd="25dp" />

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back_black"
                android:id="@+id/player_imageview2"
                android:layout_width="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back_black"
                android:id="@+id/player_imageview3"
                android:layout_width="100dp"
                android:layout_marginLeft="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/player_imageview2" />

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back_black"
                android:id="@+id/player_imageview4"
                android:layout_width="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/player_imageview3"
                android:layout_marginStart="25dp" />

            <ImageView
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/back_black"
                android:id="@+id/player_imageview5"
                android:layout_width="100dp"
                android:layout_marginStart="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/player_imageview4" />

            <TextView
                android:text="00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="gravity"
                android:textStyle="normal|bold"
                android:textColor="@android:color/white"
                android:textSize="45dp"
                android:id="@+id/player_score_textview"
                android:gravity="center_vertical|fill_horizontal"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/player_imageview1"
                android:fontFamily="serif" />


        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="30"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="bottom">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="122dp"
                android:layout_height="match_parent"
                android:layout_weight="12">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="Money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/money_textview"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:fontFamily="serif" />

                    <TextView
                        android:text="10,000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/money_amount_textview"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="serif" />

                    <TextView
                        android:text="Bet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bet_textview"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:fontFamily="serif" />

                    <TextView
                        android:text="1000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:fontFamily="serif" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:text="Stay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/stay_button"
                android:layout_weight="9"
                android:background="#ff660000"
                android:textColor="@android:color/white"
                android:fontFamily="serif"
                android:layout_marginRight="10dp" />

            <Button
                android:text="Hit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/hit_button"
                android:layout_weight="9"
                android:background="#ff660000"
                android:textColor="@android:color/white"
                android:fontFamily="serif"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>